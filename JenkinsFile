pipeline {
    agent any

    stages {
        stage("Build") {
            steps {
                sh 'wget 127.0.0.1:666/depends.zip'
                sh 'unzip depends.zip'
                sh "mvn -version"
                sh "sudo JAVA_HOME=/usr/lib/jvm/java-1.8.0-openjdk-amd64 mvn clean install"
                sh "/usr/lib/jvm/java-8-openjdk-amd64/bin/java -jar Obfuscation/qprotect.jar --input target/AbyssChat-PRE.jar --output AbyssChat.jar --config Obfuscation/config.yml"
            }
            post {
                success {
                    archiveArtifacts artifacts: 'AbyssChat.jar'
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}